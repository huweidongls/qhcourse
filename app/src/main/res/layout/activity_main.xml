<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.a99zan.qhcourse.activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/fl_container"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scrollbars="none"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioGroup
                android:id="@+id/rgMenus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:background="@drawable/boder_top"
                android:paddingTop="5dp"
                android:gravity="bottom"
                android:orientation="horizontal"
                >

                <RadioButton
                    style="@style/footerTabButton"
                    android:id="@+id/news"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/news_selector"
                    android:paddingBottom="5dp"
                    android:textColor="@drawable/text_color_selector"
                    android:text="@string/news" />

                <RadioButton
                    style="@style/footerTabButton"
                    android:id="@+id/CourseRegistration"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:drawableTop="@drawable/regist_selector"
                    android:paddingBottom="5dp"
                    android:textColor="@drawable/text_color_selector"
                    android:text="@string/CourseRegistration" />

                <RadioButton
                    style="@style/footerTabButton"
                    android:id="@+id/friends"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/friends_selector"
                    android:textColor="@drawable/text_color_selector"
                    android:text="@string/friends"/>

                <RadioButton
                    style="@style/footerTabButton"
                    android:id="@+id/PersonalCenter"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/person_selector"
                    android:textColor="@drawable/text_color_selector"
                    android:text="@string/PersonalCenter"/>
            </RadioGroup>
        </FrameLayout>
    </LinearLayout>

</RelativeLayout>
